{
  "name": "charts.css",
  "version": "0.4.0",
  "description": "Open source CSS framework for data visualization.",
  "author": "Rami Yushuvaev",
  "homepage": "https://ChartsCSS.org/",
  "license": "MIT",
  "keywords": [
    "css",
    "html",
    "css-framework",
    "charts",
    "chart",
    "scss",
    "ui-component"
  ],
  "main": "dist/charts.min.css",
  "files": [
    "dist/charts.css",
    "dist/charts.css.map",
    "dist/charts.min.css"
  ],
  "scripts": {
    "build": "npm-run-all css-compile css-minify",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/ -o dist/",
    "css-minify": "uglifycss dist/charts.css > dist/charts.min.css",
    "watch": "nodemon -e scss,html --watch src --exec \"npm run build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChartsCSS/charts.css.git"
  },
  "bugs": {
    "url": "https://github.com/ChartsCSS/charts.css/issues"
  },
  "devDependencies": {
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "uglifycss": "0.0.29"
  }
}
