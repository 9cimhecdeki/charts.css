{
  "name": "charts.css",
  "version": "0.5.0",
  "description": "Open source CSS framework for data visualization.",
  "author": "Rami Yushuvaev",
  "homepage": "https://ChartsCSS.org/",
  "license": "MIT",
  "keywords": [
    "css",
    "html",
    "css-framework",
    "charts",
    "chart",
    "scss",
    "ui-component"
  ],
  "main": "dist/charts.min.css",
  "files": [
    "dist/charts.css",
    "dist/charts.css.map",
    "dist/charts.min.css"
  ],
  "scripts": {
    "build": "npm-run-all css-compile css-postcss",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/ -o dist/",
    "css-postcss": "postcss dist/charts.css > dist/charts.min.css",
    "watch": "nodemon -e scss,html --watch src --exec \"npm run build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChartsCSS/charts.css.git"
  },
  "bugs": {
    "url": "https://github.com/ChartsCSS/charts.css/issues"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "cssnano": "^4.1.10",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.2",
    "postcss-cli": "^8.1.0",
    "stylelint": "^13.7.2",
    "stylelint-config-twbs-bootstrap": "^2.1.0"
  },
  "browserslist": [
    ">1%",
    "not dead",
    "not ie >= 0",
    "not op_mini all",
    "last 2 versions"
  ]
}
